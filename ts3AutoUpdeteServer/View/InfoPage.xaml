            <TextBox x:Name="HostingSiteTxtbox" FontSize="15" Margin="200 115 0 0" Text="https://ts3.cloud/"  Height="25" Width="370" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        </Grid>

        <Grid Grid.Row="1">
