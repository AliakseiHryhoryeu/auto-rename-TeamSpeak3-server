            <Label Margin="0 40 0 0" FontSize="15" >LinkedIn</Label>
            <TextBox x:Name="ContactsLinkedInTxtbox" FontSize="15" Margin="200 45 0 0" Text="https://www.linkedin.com/in/aliaksei-hryhoryeu-15a3a6219/"  Height="25" Width="370" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Margin="0 70 0 0" FontSize="15" >E-mail</Label>
            <TextBox x:Name="ContactsEmailTxtbox" FontSize="15" Margin="200 75 0 0" Text="aliaksei.hryhoryeu.1@gmail.com"  Height="25" Width="370" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        </Grid>



