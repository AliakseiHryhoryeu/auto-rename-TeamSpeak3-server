<Window x:Class="ts3AutoUpdeteServer.View.UpdateServers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ts3AutoUpdeteServer.View"
        mc:Ignorable="d"
        Title="Update servers" Height="158" Width="644" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label FontSize="15" Margin="10,17,0,0" >Enter update id server:*</Label>
        <TextBox x:Name="UpdateServerIdTxtbox" FontSize="15" Margin="191,18,0,0" Text=""  Height="33" Width="200" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
        <Button x:Name="UpdateServerButton" FontSize="20" Width="200" Height="33" Margin="405,18,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click_UpdateServer">Update</Button>
        <Button x:Name="DeleteServerButton" FontSize="20" Width="595" Height="33" Margin="10,71,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click_UpdateAllServers">Update all</Button>
    </Grid>
</Window>
